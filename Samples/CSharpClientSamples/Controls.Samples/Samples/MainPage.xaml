<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bit.CSharpClient.Controls.Samples.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bitControls="clr-namespace:Bit.View.Controls;assembly=Bit.CSharpClient.Controls">
    <bitControls:BitFrame
        Margin="10"
        BorderColor="LightGray"
        BorderWidth="2"
        CornerRadius="1">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Clicked="RadioButton_Clicked" Text="Radio Button" />
            <Button Clicked="Checkbox_Clicked" Text="Checkbox" />
            <Button Clicked="DateTimePicker_Clicked" Text="Date Time Picker" />
        </StackLayout>
    </bitControls:BitFrame>
</ContentPage>
